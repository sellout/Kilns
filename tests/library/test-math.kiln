(load "library/test-framework")

;;; FIXME: have to include the component in each test, since the test is run
;;;        inside a sandbox

{test-result {should {add}}
             {test (load "library/simple-components")
                   {include-component "library/math"}
                   {+ (tup 2 4 {rc})}}
             {expected-result {rc 6}}}

{test-result {should {remainder}}
             {test (load "library/simple-components")
                   {include-component "library/math"}
                   {remainder (tup 7 3 {rc})}}
             {expected-result {rc 1}}}

{test-result {should {modulus}}
             {test (load "library/simple-components")
                   {include-component "library/math"}
                   {modulus (tup 7 3 {rc})}}
             {expected-result {rc 1}}}
