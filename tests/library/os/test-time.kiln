(load "library/test-framework")

{test-result {should {get-current-time}}
             {test (load "library/simple-components")
                   {include-component "library/os/time"}
                   {include-component "library/ordering"}
                   {time {got-time}}
                   (trigger {got-time ?time}
                     {<= (tup 3524182123 time {rc {t}} {rc {f}})})}
             {expected-result {rc {t}}}}

{test-result {should {sleep-10-seconds}}
             {test (new (start end)
                     (load "library/simple-components")
                     {include-component "library/os/time"}
                     {include-component "library/math"}
                     (cont {time {start}}
                           {sleep (tup 10 {time {end}})})
                     (trigger (par {start ?s} {end ?e})
                       {- (tup e s {difference})})
                     (trigger {difference ?d}
                       {<= (tup 10 d {rc {t}} {rc {f}})}))}
             {expected-result {rc {t}}}}
