;;; The Y combinator
(define (Y ?process ?pattern {?u})
  ;; FIXME: need a way to uniqify variables
  (trigger (par pattern {u ?y-iueoa})
           process
           y-iueoa
           {u y-iueoa}))

;;; A replicating trigger
(define (trigger* ?pattern ?process)
  (new t
    (Y process pattern {t})
    {t (Y process pattern {t})}))
