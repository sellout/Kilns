(new (lam abs)
  ;;            ⟦x⟧ = x
  ;; ⟦(lambda x P)⟧ = {abs (trigger {lambda x} ⟦P⟧)}
  ;;        ⟦(P Q)⟧ = (new (fun arg) (par (App) [fun ⟦P⟧] {arg ⟦Q⟧}))
  (define (lambda ?var ?process)
    (trigger {lam var} process))
  (define (apply ?function ?argument)
    (new (fun arg)
      [fun function]
      {arg argument}
      (trigger (par [fun ?p] {arg ?q})
        p
        {lam q}))))
